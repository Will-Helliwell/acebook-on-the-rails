<div>
  <header>
    <h1> Sign-up </h1>
  </header>

<div class="alert alert-info">
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  </div>

  <div id="signup_form">
    <%= form_for @user, :method => :post, params: { user: { active: true}} do |form| %>
      <div id="signup_details">
        <%= form.label :username %>
        <% username_classes = ['form-control'] %>
        <% if @user.errors[:username].any? %>
          <% username_classes << 'is-invalid' %>
        <% end %>
        <%= form.text_field :username, class: username_classes.join(' ') %><br>

        <%= form.label :email %>
        <% email_classes = ['form-control'] %>
        <% if @user.errors[:email].any? %>
          <% email_classes << 'is-invalid' %>
        <% end %>
        <%= form.email_field :email, class: email_classes.join(' ') %><br>

        <%= form.label :password_string %>
        <% password_classes = ['form-control'] %>
        <% if @user.errors[:password_string].any? %>
          <% password_classes << 'is-invalid' %>
        <% end %>
        <%= form.password_field :password_string, class: password_classes.join(' ') %><br>
      </div>

      <div id="signup_button">
        <%= form.submit "Create Account" %>
      </div>
    <% end %>
  </div>
</div>
