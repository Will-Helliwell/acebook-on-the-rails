<div>
  <header>
    <h1> Sign-up Form </h1>
  </header>
  <div class="login_link">
    Already a user? <%= link_to "Sign-in", sessions_new_path %>
  </div>

<%= @user.errors.full_messages %>

  <div id="signup_form">
    <%= form_for @user, :method => :post, params: { user: { active: true}} do |form| %>
      <div id="signup_details">
        <%= form.label :username %>
        <%= form.text_field :username %><br>

        <%= form.label :email %>
        <%= form.email_field :email %><br>

        <%= form.label :password_string %>
        <%= form.password_field :password_string %><br>
      </div>

      <div id="signup_button">
        <%= form.submit "Create Account" %>
      </div>
    <% end %>
  </div>
</div>
